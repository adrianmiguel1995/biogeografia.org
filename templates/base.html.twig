    <body>
    {% block header %}
        <header id="header">
            <div class="container">

                <div id="logo" class="pull-left">
                    <a href="{{ path("index")}}"><img id="imglogo" src="{{ asset('img/logo.png') }}" alt="" title="" /></a>
                </div>

                <nav id="nav-menu-container">
                    <ul class="nav-menu">
                        <li class="menu-active"><a href="#hero">Index</a></li>
                        <li><a href="{{ path("publications") }}">{% trans %}Publicaciones{% endtrans %}</a></li>
                        <li><a href="#projects">{% trans %}Proyectos en marcha{% endtrans %}</a></li>
                        <li><a href="#media">{% trans %}Media{% endtrans %}</a></li>
