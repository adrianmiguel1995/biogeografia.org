                                <li><a href="{{ path("translate") }}">{% trans %}English{% endtrans %}</a></li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </header>
    {% endblock %}

        {% block body %}{% endblock %}

    {% block footer %}
        <footer id="footer">
            <div class="row">
                <div class="container col-lg-1 col-md-3 col-sm-2 wow fadeInRight">
